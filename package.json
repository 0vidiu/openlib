{
  "name": "openlib",
  "version": "0.0.0-development",
  "description": "A custom boilerplate for creating open source libraries",
  "main": "dist/openlib.js",
  "author": "Ovidiu Barabula <lectii2008@gmail.com> (https://github.com/0vidiu)",
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "setup": "",
    "dev": "cross-env NODE_ENV=development webpack --watch",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "lint:js": "eslint --max-warnings=0 ./",
    "lint:ts": "tslint -t stylish -c tslint.json -p tsconfig.json -e ./**/*.spec.ts ./src/**/*.ts",
    "lint": "npm-run-all --parallel lint:*",
    "prebuild": "rimraf ./dist",
    "build": "cross-env NODE_ENV=production webpack",
    "validate": "npm-run-all --parallel lint test build",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/register": "^7.0.0-beta.40",
    "@types/node": "^9.4.6",
    "babel-eslint": "^8.2.2",
    "cross-env": "^5.1.3",
    "eslint": "^4.18.2",
    "eslint-plugin-babel": "^4.1.2",
    "rimraf": "^2.6.2",
    "ts-loader": "^4.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.7.2",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  }
}
